{
    "compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"allowJs": true,
		"strict": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"typeRoots": ["./node_modules/@types"],
		"types": ["jest", "node"],
		"baseUrl": ".",
		"paths": {
			"react-native": ["node_modules/react-native-web"],
			"@auth/*": ["packages/auth/build/*"],
			"@services/*": ["packages/services/build/*"],
			"@iam/types/*": ["packages/types/build/*"]
		}
    }
}  