// packages/services/tsconfig.json
{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false,
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"noEmitOnError": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "build"],
	"references": [
        { "path": "../types" }
	]
}