{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "build",
    "emitDeclarationOnly": false,
    "types": ["react", "react-native"],
    "jsx": "react-native",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "react-native": ["node_modules/react-native-web"]
    }
  },
	"include": ["src"],
  "exclude": ["node_modules", "build"],
  "references": [
    { "path": "../types" }
  ]
}