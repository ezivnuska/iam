{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"composite": true,
		"outDir": "build",
		"rootDir": "src",
		"skipDefaultLibCheck": true,
		"jsx": "react-jsx",
		"isolatedModules": true,
        "baseUrl": "src",
        "paths": {
            "@app/*": ["app/*"],
            "@features/*": ["features/*"],
            "@shared/*": ["shared/*"],
            "@assets/*": ["shared/assets/*"],
            "@hoc/*": ["shared/hoc/*"],
            "@components/*": ["shared/ui/*"],
            "@buttons/*": ["shared/buttons/*"],
            "@forms/*": ["shared/forms/*"],
            "@layout/*": ["shared/layout/*"],
            "@media/*": ["shared/media/*"],
            "@modals/*": ["shared/modals/*"],
            "@hooks/*": ["shared/hooks/*"],
            "@utils/*": ["shared/utils/*"]
        },
        "esModuleInterop": true
	},
	"include": [
		"src",
		"../../packages/auth/src",
		"../../packages/services/src",
		"../../packages/types/src",
		"../../packages/utils/src",
		"../../packages/theme/src"
    ],
	"exclude": ["node_modules", "build"],
	"references": [
		{ "path": "../../packages/auth" },
		{ "path": "../../packages/services" },
		{ "path": "../../packages/types" },
		{ "path": "../../packages/utils" },
		{ "path": "../../packages/theme" }
	],
}