{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"composite": true,
		"outDir": "build",
		"rootDir": "src",
		"skipDefaultLibCheck": true,
		"jsx": "react-jsx",
		"isolatedModules": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        }
	},
	"include": [
		"src",
		"../../packages/auth/src",
		"../../packages/services/src",
		"../../packages/types/src"
    ],
	"exclude": ["node_modules", "build"],
	"references": [
		{ "path": "../../packages/auth" },
		{ "path": "../../packages/services" },
		{ "path": "../../packages/types" }
	],
}