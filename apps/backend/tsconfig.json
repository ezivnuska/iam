{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"module": "CommonJS",
		"composite": true,
		"outDir": "build",
		"rootDir": "src",
		"declaration": true,
		"declarationDir": "build",
		"emitDeclarationOnly": false,
		"jsx": "preserve",
		"typeRoots": ["./src/@types", "./node_modules/@types"],
		"types": ["node", "express"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "build"]
}