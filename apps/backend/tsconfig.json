{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"module": "CommonJS",
		"composite": true,
		"outDir": "build",
		"rootDir": "src",
		"declaration": true,
		"declarationDir": "build",
		"emitDeclarationOnly": false,
		"typeRoots": [
			"./src/types",
			"./node_modules/@types",
			"../../node_modules/@types"
		],
		"types": ["express"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "build"],
	"references": [
		{ "path": "../../packages/auth" },
		{ "path": "../../packages/types" },
		{ "path": "../../packages/validation" }
	]
}